@model Exerc_Entity_Scaffold.Models.Pedido

@{
    ViewData["Title"] = "Adicionar Pedido";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro" class="control-label"></label>
                <input asp-for="Carro" class="form-control" />
                <span asp-validation-for="Carro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLocacao" class="control-label"></label>
                <input asp-for="DataLocacao" class="form-control" type="date" />
                <span asp-validation-for="DataLocacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control" type="date"/>
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>
            <br/>
              <div class="row">
                <div class="col-md-2 form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
                <div class="col-md-2 form-group">
                    <a asp-action="Index" class="btn btn-warning">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
